{
  "version": 2,
  "builds": [
    {
      "src": "text_summarizer/wsgi.py",
      "use": "@vercel/python"
    },
    {
      "src": "summarizer/static/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/summarizer/static/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/",
      "dest": "text_summarizer/wsgi.application"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "text_summarizer.settings"
  }
}
