{
  "version": 2,
  "builds": [
    {
      "src": "manage.py",
      "use": "@vercel/python"
    },
    {
      "src": "summarizer/static/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/summarizer/static/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/summarizer/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/summarizer/views.index"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "text_summarizer.settings"
  }
}
